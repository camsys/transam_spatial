<% if Rails.application.config.transam_spatial_map_control == "leaflet" %>

  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
  <%= javascript_include_tag "http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js" %>

<% elsif  Rails.application.config.transam_spatial_map_control == "mapbox" %>

  <link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.css' rel='stylesheet' />
  <script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.js'></script>

<% end %>

<% if Rails.application.config.transam_spatial_tile_provider = "google" %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?v=3.2&sensor=false#{Rails.env.development? ? '&key=' + ENV['GOOGLE_API_KEY'] : ''}" %>
<% end %>


<% if Rails.application.config.transam_spatial_map_options.include? "marker_cluster" %>
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-markercluster/v0.4.0/MarkerCluster.css' />
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-markercluster/v0.4.0/MarkerCluster.Default.css' />
  <%= javascript_include_tag "https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-markercluster/v0.4.0/leaflet.markercluster.js" %>
<% end %>
<% if Rails.application.config.transam_spatial_map_options.include? "full_screen" %>
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v0.0.3/leaflet.fullscreen.css'  />
  <%= javascript_include_tag "https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-fullscreen/v0.0.3/Leaflet.fullscreen.min.js" %>
<% end %>
<% if Rails.application.config.transam_spatial_map_options.include? "draw" %>
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-draw/v0.2.2/leaflet.draw.css'  />
  <%= javascript_include_tag "https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-draw/v0.2.2/leaflet.draw.js" %>
<% end %>
<% if Rails.application.config.transam_spatial_map_options.include? "locate" %>
  <link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-locatecontrol/v0.24.0/L.Control.Locate.css'  />
  <%= javascript_include_tag "https://api.tiles.mapbox.com/mapbox.js/plugins/leaflet-locatecontrol/v0.24.0/L.Control.Locate.js" %>
<% end %>
