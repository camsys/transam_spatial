%div{style: "min-width:200px;"}
  .row{style: "border-top:1px solid #CCCCCC;"}
    .col-md-3
      %i.fa.fa-2x.fa-tag
    .col-md-9
      %h4= link_to asset.asset_tag, asset_path(asset)
  .row{style: "border-top:1px solid #CCCCCC;border-bottom:1px solid #CCCCCC;"}
    .col-md-12
      .popup-content
        = format_field("Type", asset.asset_type.name )
        = format_field("Description", asset.description )
        = format_field("Organization", asset.organization )