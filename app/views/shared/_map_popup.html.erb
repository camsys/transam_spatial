<div style="min-width:200px;">
	<div class="row" style="border-top:1px solid #CCCCCC;">
		<div class="col-md-3">
			<i class="fa fa-2x fa-tag"></i>
		</div>
		<div class="col-md-9">
			<h4><%= link_to asset.asset_tag, asset_path(asset) %></h4>
		</div>
	</div>
	<div class="row"  style="border-top:1px solid #CCCCCC;border-bottom:1px solid #CCCCCC;">
		<div class="col-md-12">
			<div class="popup-content">
				<%= format_field("Type", asset.asset_type.name ) %>
				<%= format_field("Description", asset.description ) %>
				<%= format_field("Organization", asset.organization ) %>
				<%= format_field("Condition", asset.reported_condition_type.name) unless asset.reported_condition_type.nil? %>
			</dl>
		</div>
	</div>
</div>
